<div class="container p-3 p-md-4 p-lg-5">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="card">
        <h2 class="m-3 m-md-5"><%= @news.title%></h2>
        <div class="text-muted mx-3 mx-md-5"><%= l @news.created_at, format: :news %></div>
        <div class="mx-3 mx-md-5">
          <%= image_tag @news.news_image.url, class: "card-img-top img-fluid rounded" %>
        </div>
        <div class="body m-3 m-md-5">
          <p><%= @news.body %></p>
        </div>
      </div>
      <%= render "arrows" %>
    </div>
  </div>
</div>
