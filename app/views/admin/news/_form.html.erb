<%= form_with model: news, url: url, local: true do |f| %>
  <%= render '/admin/shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :category%>
    <%= f.select :category, News.categories_i18n.invert, {}, {class: "form-control", required: true} %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_area :title, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.rich_text_area :body, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :news_image%>
    <%= f.file_field :news_image, class: "form-control-file mb-3" %>
    <%= f.hidden_field :news_image_cache %>
  </div>
  <i class="fas fa-exclamation-circle"></i>画像比率は縦:横＝2:3
  <div class="mt-3 mb-3">
    <%= image_tag @news.news_image.url, class: "img-fluid" if @news.news_image? %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
<div class="text-center my-5">
  <%= link_to "一覧へ", admin_news_index_path, class: "btn btn-secondary" %>
</div>
