<div class="container p-3 p-md-4 p-lg-5">
  <div class="my-3">
    <h2>予約カレンダー</h2>
  </div>
  <div class="row">
    <div class="col-12 mb-3">
      <%= month_calendar events: @capacities do |date, capacities| %>
        <%= date.day %>
        <% capacities.each do |capacity| %>
          <div class="badge <%= capacity.capacity_status %>">
            <%= capacity.capacity_status_i18n%>
          </div>
          <p class="text-nowrap">
            席数 : 
            <%= link_to edit_admin_capacity_path(capacity) do%>
              <%= capacity.remaining_seat%>席
            <% end%>
          </p>
          <p class="text-nowrap">予約 :
            <%= link_to admin_capacity_path(capacity) do%>
              <%= capacity.reservations.count%>件
            <% end%>
          </p>
          <p class="text-nowrap">
            <%= link_to admin_closed_path(capacity), method: :patch, data: {confirm: "休業日に設定してもよろしいですか?"}, class: "btn btn-success btn-sm" do%>
              休業日に設定
            <% end%>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
